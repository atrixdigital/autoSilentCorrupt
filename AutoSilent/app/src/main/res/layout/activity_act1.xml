<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meveloper.autosilent.act1"
    android:background="#ecf7fb">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark Current Location"
        android:id="@+id/curlock"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="60dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/mybutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Marked Locations"
        android:id="@+id/show"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="60dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/mybutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to AutoSilent"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@string/abc_action_menu_overflow_description" />
</RelativeLayout>
